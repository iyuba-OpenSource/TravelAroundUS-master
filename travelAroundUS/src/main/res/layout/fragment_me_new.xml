<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <!--标题-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/app_color">
        <TextView
            android:id="@+id/clockInView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="打卡"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/title_button_background"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="我"
            android:gravity="center"

            app:layout_constraintLeft_toRightOf="@id/clockInView"
            app:layout_constraintRight_toLeftOf="@id/exitView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/exitView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="退出"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:background="@drawable/title_button_background"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--菜单数据-->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--头部数据-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--用户数据-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/userLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_setting_panel_background"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/topLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/userPic"
                            android:layout_width="60dp"
                            android:layout_height="60dp"

                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />
                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:hint="未登录"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"

                            app:layout_constraintLeft_toRightOf="@id/userPic"
                            app:layout_constraintRight_toLeftOf="@id/userMore"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/userWallet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:drawableStart="@drawable/ic_wallet"
                            android:hint="钱包：0.0"
                            android:textColor="@color/app_color"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"

                            app:layout_constraintTop_toBottomOf="@id/userName"
                            app:layout_constraintLeft_toLeftOf="@id/userName"
                            app:layout_constraintRight_toRightOf="@id/userName"/>
                        <TextView
                            android:id="@+id/userVipTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/gray"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"

                            app:layout_constraintLeft_toLeftOf="@id/userName"
                            app:layout_constraintRight_toRightOf="@id/userName"
                            app:layout_constraintTop_toBottomOf="@id/userWallet"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <ImageView
                            android:id="@+id/userMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"

                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <View
                        android:id="@+id/line"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/gray_f0_personal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/topLayout"
                        />
                    <LinearLayout
                        android:id="@+id/typeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line"
                        >
                        <!--关注-->
                        <LinearLayout
                            android:id="@+id/attentionLayout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/attentionText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray"
                                android:text="关注"
                                />
                        </LinearLayout>
                        <!--粉丝-->
                        <LinearLayout
                            android:id="@+id/fansLayout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/fansText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray"
                                android:text="粉丝"
                                />
                        </LinearLayout>
                        <!--通知-->
                        <LinearLayout
                            android:id="@+id/notificationLayout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/notificationText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray"
                                android:text="通知"
                                />
                        </LinearLayout>
                        <!--积分-->
                        <LinearLayout
                            android:id="@+id/integralLayout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/integralText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray"
                                android:text="积分"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--登录样式-->
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/no_login" />
            </RelativeLayout>
            <!--菜单数据-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--会员中心-->
                <RelativeLayout
                    android:id="@+id/vipCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_setting_panel_background"
                    android:layout_margin="10dp"

                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    >
                    <ImageView
                        android:id="@+id/iv_vipCenter"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/p_vip_new"/>
                    <TextView
                        android:id="@+id/tv_vipCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:text="会员中心"
                        android:layout_marginStart="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_vipCenter"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/go"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <!--视频和篇目-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_setting_panel_background"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:id="@+id/wordNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:id="@+id/iv_wordNote"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_word_note" />

                        <TextView
                            android:id="@+id/tv_wordNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@id/iv_wordNote"
                            android:text="生词本"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divide_line"/>
                    <RelativeLayout
                        android:id="@+id/videoCollect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">
                        <ImageView
                            android:id="@+id/iv_videoCollect"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/video_cc_new"/>
                        <TextView
                            android:id="@+id/tv_videoCollect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="视频收藏"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/iv_videoCollect"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divide_line"/>
                    <RelativeLayout
                        android:id="@+id/videoDubbing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:id="@+id/iv_videoDubbing"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_video_dubbing" />
                        <TextView
                            android:id="@+id/tv_videoDubbing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="视频配音"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/iv_videoDubbing"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divide_line"/>
                    <RelativeLayout
                        android:id="@+id/localArticle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">
                        <ImageView
                            android:id="@+id/iv_localArticle"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/np_local_new"/>
                        <TextView
                            android:id="@+id/tv_localArticle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="本地篇目"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/iv_localArticle"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divide_line"/>
                    <RelativeLayout
                        android:id="@+id/favorArticle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">
                        <ImageView
                            android:id="@+id/iv_favorArticle"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/np_favor_new"/>

                        <TextView
                            android:id="@+id/tv_favorArticle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@id/iv_favorArticle"
                            android:text="最爱篇目"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divide_line"/>
                    <RelativeLayout
                        android:id="@+id/listenArticle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:id="@+id/iv_listenArticle"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/np_listen_new" />
                        <TextView
                            android:id="@+id/tv_listenArticle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="试听篇目"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/iv_listenArticle"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                </LinearLayout>

                <!--学习报告等-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_setting_panel_background"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:id="@+id/payMark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:id="@+id/iv_payMark"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_pay_mark" />
                        <TextView
                            android:id="@+id/tv_payMark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="购买记录"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/iv_payMark"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divide_line"/>
                    <RelativeLayout
                        android:id="@+id/studyReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:id="@+id/iv_studyReport"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_learning_report" />
                        <TextView
                            android:id="@+id/tv_studyReport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="学习报告"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/iv_studyReport"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divide_line"/>
                    <RelativeLayout
                        android:id="@+id/walletHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">
                        <ImageView
                            android:id="@+id/iv_walletHistory"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_wallet_history"/>
                        <TextView
                            android:id="@+id/tv_walletHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="钱包记录"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/iv_walletHistory"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divide_line"/>
                    <RelativeLayout
                        android:id="@+id/messageCenter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:id="@+id/iv_messageCenter"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/p_mess_new" />
                        <TextView
                            android:id="@+id/tv_messageCenter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="消息中心"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/iv_messageCenter"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divide_line"/>
                    <RelativeLayout
                        android:id="@+id/speakCircle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:id="@+id/iv_speakCircle"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/p_colloquial_circle" />

                        <TextView
                            android:id="@+id/tv_speakCircle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@id/iv_speakCircle"
                            android:text="口语圈"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                </LinearLayout>

                <!--其他内容-->
                <LinearLayout
