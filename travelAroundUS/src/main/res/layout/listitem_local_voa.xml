<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundProgress="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backlayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_select">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/checkBox_is_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:src="@android:drawable/checkbox_off_background"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/checkBox_is_delete"
            android:descendantFocusability="blocksDescendants">

            <RelativeLayout
                android:id="@+id/voaN_layout"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/voa"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="0dp"
                    android:text="EPlisode"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/voaN"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/voaTitle_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignTop="@id/voaN_layout"
                android:layout_alignBottom="@id/voaN_layout"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/download"
                android:layout_toRightOf="@id/voaN_layout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="fill_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="#414141"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/titleCn"
                    android:layout_width="fill_parent"
                    android:layout_height="28dp"
                    android:layout_marginBottom="7dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="#A5A5A5"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>