<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--文章-->
    <ImageView
        android:id="@+id/iv_article_cover"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@color/colorPrimary" />
    <TextView
        android:id="@+id/tv_en_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_article_cover"
        android:text="this is English.this is English.this is English.this is English.this is English.this is English."
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tv_cn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_en_title"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_article_cover"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="中文标题，中文标题，中文标题，中文标题，中文标题，中文标题，中文标题，中文标题，"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/tv_read_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:text="123次阅读"
        android:textColor="#9f9f9f"
        android:layout_alignBottom="@id/iv_article_cover"
        android:layout_toRightOf="@id/iv_article_cover"
        android:layout_marginBottom="5dp"
       />
</RelativeLayout>