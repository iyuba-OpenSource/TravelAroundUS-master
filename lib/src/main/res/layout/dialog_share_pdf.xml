<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="8dp"/>

        <ImageView
            android:id="@+id/image_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginRight="8dp"
            android:src="@drawable/imovies_ic_close"/>

        <TextView
            android:id="@+id/text_description"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            tools:text="sssss"/>

        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="16dp"/>

        <TextView
            android:id="@+id/text_link"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="sssssssss"/>

        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="16dp"/>

        <TextView
            android:id="@+id/text_copy"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/copy_link_bkg"
            android:textColor="#608AE3"
            android:text="@string/cope_me"/>

        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dedede"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_send_qq"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="#608AE3"
                android:gravity="center"
                android:text="@string/send_to_qq"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dedede"/>

            <TextView
                android:id="@+id/text_send_wexin"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#608AE3"
                android:text="@string/send_to_weixin"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
